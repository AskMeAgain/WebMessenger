@model WebMessenger.Models.User_Chat
@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_NavBar");

@Html.Partial("_ChatFunctionality");
@Html.Partial("_ChatDisplay", Model.Chat);


<center>
    <h1>Chat</h1>

    @using (Html.BeginForm("ChatAsync", "Messenger", FormMethod.Post)) {
        @foreach (var item in Model.Friends) {
            <input name="id" type="submit" id="@item.Name" value="@item.Name" />
        }
    }
</center>
<br /><br /><br />
@{
    if (!string.IsNullOrEmpty(Model.selectedChat)) {

        <h2>@Model.selectedChat</h2>
        <br />

        @Html.Partial("_DisplayChat", Model.Chat);

    }
}



