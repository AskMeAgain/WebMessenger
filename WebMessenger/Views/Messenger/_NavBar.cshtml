@model WebMessenger.Models.User;


<link href="/css/NavBar.css" rel="Stylesheet" type="text/css" />

<script type="text/javascript">
    document.body.style.setProperty('--maincolor', "cornflowerblue")
</script>

<div class="NavBar">
    <label id="NavBar_Title">WebMessenger</label>
    <a id="NavBar_leftSide" class="NavBar_Button" asp-controller="Messenger" asp-action="ChatAsync">Chat</a>
    <a id="NavBar_leftSide" class="NavBar_Button" asp-controller="Messenger" asp-action="Wallet">Wallet</a>

    @if (Model != null) {
        @if (!string.IsNullOrEmpty(Model.Name)) {
            <div id="NavBar_Logout">
                <label id="NavBar_Text">Hallo @Model.Name</label>
                <a id="NavBar_rightSide" class="NavBar_Button" id="NavBar_Settings" asp-controller="Messenger" asp-action="Settings">Settings</a>
                <a id="NavBar_rightSide" class="NavBar_Button" asp-controller="Messenger" asp-action="Logout">Logout</a>
            </div>
        }
    }
</div>